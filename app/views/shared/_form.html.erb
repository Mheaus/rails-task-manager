<div class="container">
  <div class="row">
    <div class="col-xs-6 form">
      <%= form_for(@task) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description %>
        </div>

        <%= form.submit %>
      <% end %>
    </div>
  </div>
</div>


